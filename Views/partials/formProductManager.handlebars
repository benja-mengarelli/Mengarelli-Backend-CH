{{#if modoAgregar}}
<form id="formAgregar">
    <label for="nombre">Nombre del producto</label>
    <input type="text" id="nombre" name="nombre" placeholder="Nombre del producto" required min="1" max="50">
    <label for="price">Precio del producto</label>
    <input type="number" id="precio" name="precio" placeholder="Precio del producto" required min="0" step="0.01">
</form>
{{/if}}

{{#if modoEditar}}
<form id="formEditar">
    <!-- campos para editar -->
    <select name="listaProductos" id="">
        {{#each productos}}
        <option value="{{this.id}}">{{this.title}}</option>
        {{/each}}
    </select>
    <label for="nombre">Nombre del producto</label>
    <input type="text" id="nombre" name="nombre" placeholder="Nombre del producto" required min="1" max="50">
    <label for="price">Precio del producto</label>
    <input type="number" id="precio" name="precio" placeholder="Precio del producto" required min="0" step="0.01">
</form>
{{/if}}

{{#if modoEliminar}}
<form id="formEliminar">
    <select name="listaProductos" id="">
        {{#each productos}}
        <option value="{{this.id}}">{{this.title}}</option>
        {{/each}}
    </select>
    <!-- campos para eliminar -->
</form>
{{/if}}