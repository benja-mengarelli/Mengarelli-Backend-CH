{{#if modoEditar}}
<form id="formEditar">
    <!-- campos para editar -->
    <label for="select">Ingrese producto a editar</label>
    <select name="listaProductos" id="listaProductosEditar">
        {{#each productos}}
        <option value="{{this._id}}">{{this.nombre}}</option>
        {{/each}}
    </select>
    <label for="nombre">Nombre del producto</label>
    <input type="text" id="nombre" name="nombre" placeholder="Nombre del producto" required min="1" max="50" value="{{this.nombre}}">
    <label for="price">Precio del producto</label>
    <input type="number" id="precio" name="precio" placeholder="Precio del producto" required min="0" step="0.5" value="{{this.precio}}">
    <label for="Stock">Stock</label>
    <input type="number" id="stock" name="stock" placeholder="Stock del producto" value="{{this.stock}}">

    <button type="submit">Confirmar</button>
</form>
{{/if}}

